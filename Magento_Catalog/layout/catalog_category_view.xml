<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="page.main.title" remove="true"/>

        <move element="breadcrumbs" destination="main.content" after="columns.top" />

        <referenceContainer name="div.sidebar.main">
            <block class="Magento\Cms\Block\Block" name="promotion_cms_block" after="sidebar.main">>
                <arguments>
                    <argument name="block_id" xsi:type="string">promotion_cms_block</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>

<?xml version="1.0"?>

<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>

            <!--        footer         -->

        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>

        <move element="form.subscribe" destination="page.wrapper" before="footer" />

        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="custom-footer" after="form.subscribe">
                <arguments>
                    <argument name="block_id" xsi:type="string">custom-footer</argument>
                </arguments>
            </block>
        </referenceContainer>

        <!--        header          -->

        <referenceContainer name="header-wrapper">
            <block name="mega_menu" class="Snowdog\Menu\Block\Menu" after="logo">
                <arguments>
                    <argument name="menu" xsi:type="string">mega-menu</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="header-wrapper">
            <container name="header-actions" as="headerActions" htmlTag="div" htmlClass="header-actions" after="navigation.sections" />
        </referenceContainer>

        <move element="authorization-link" destination="header-actions" before="-"/>
        <move element="wish-list-link" destination="header-actions" after="authorization-link" />
        <move element="top.search" destination="header-actions" after="-" />
        <move element="minicart" destination="header-actions" before="top.search" />
        <referenceContainer name="header.panel.wrapper" remove="true"/>
        <referenceContainer name="compare-link-wrapper" remove="true"/>

    </body>
</page>
